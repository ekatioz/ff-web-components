<template id="loading-indicator-template">
  <style>
    .spinner {
      margin-inline: auto;
      border: 8px solid #f3f3f3;
      border-top: 8px solid #3498db;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 2s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }
  </style>

  <div class="spinner"></div>
</template>

<script>
  class LoadingIndicatorComponent extends HTMLElement {
    constructor() {
      super();
      const shadow = this.attachShadow({
        mode: "open"
      });
      const template = document
        .getElementById("loading-indicator-template")
        .content.cloneNode(true);
      shadow.appendChild(template);
    }
  }

  customElements.define("loading-indicator-component", LoadingIndicatorComponent);
</script>